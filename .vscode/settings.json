{
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll": true
	},
	"[env]": {
		"editor.defaultFormatter": "IronGeek.vscode-env"
	},
	"editor.detectIndentation": false,
	"editor.tabSize": 2,
	"editor.insertSpaces": false,
	"eslint.validate": [
		"javascript",
		"typescript",
	],
	"files.associations": {
		"*.env*": "env"
	}
}